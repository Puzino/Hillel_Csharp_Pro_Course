@model Note

<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Edit Note</h2>
    </div>

    <form method="post" asp-action="Edit">
        <div asp-validation-summary="All"></div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="NoteName">Note Name</label>
                <input type="text" class="form-control mb-3" asp-for="NoteName" placeholder="Enter Name" required>
                <span asp-validation-for="NoteName" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="TextNote">Text Note</label>
                <input type="text" class="form-control mb-3" asp-for="TextNote" placeholder="Enter text">
                <span asp-validation-for="TextNote" class=" alert-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="TagsNote">Tags Note</label>
                <input type="text" class="form-control mb-3" asp-for="TagsNote" placeholder="Enter tags">
                <span asp-validation-for="TagsNote" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6 mb-3">
                <label asp-for="DateCreateNote">Created At</label>
                <input type="datetime-local" class="form-control" asp-for="DateCreateNote">
                <span asp-validation-for="DateCreateNote" class=" alert-danger"></span>
            </div>
        </div>


        <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Update</button>
        <a asp-controller="Note" asp-action="Index" class="btn btn-lg btn-warning p-2">Back To List</a>
    </form>

</div>


@*//for front end validations*@

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}