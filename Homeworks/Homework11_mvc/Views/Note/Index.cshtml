@model IEnumerable<Note>

@{
    ViewData["Title"] = "Notes list";
}

<div class="container shadow p-5">
    <h1>Note CRUD</h1>

    <div class="col mb-3">
        <a asp-controller="Note" asp-action="Create" class="btn btn-lg btn-primary"><i class="bi bi-file-plus-fill"></i>Add Note</a>
    </div>
    
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th scope="col">Note Name</th>
            <th scope="col">Text Note</th>
            <th scope="col">Date Created</th>
            <th scope="col">Tags Note</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="20%">@item.NoteName</td>
                    <td width="20%">@item.TextNote</td>
                    <td width="20%">@item.DateCreateNote</td>
                    <td width="20%">@item.TagsNote</td>
                    <td>
                        <div role="group" class="w-60 btn-group">
                            <span style="margin-right: 5px;">
                                <a asp-controller="Note" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary"><i class="bi bi-pencil-square"></i>Edit</a>
                            </span>
                            <span>
                                <a asp-controller="Note" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="bi bi-trash-fill"></i>Delete</a>
                            </span>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>