@model IEnumerable<Contact>

@{
    ViewData["Title"] = "Contact list";
}

<div class="container shadow p-5">
    <h1>Contact CRUD</h1>

    <div class="col mb-3">
        <a asp-controller="Contact" asp-action="Create" class="btn btn-lg btn-primary"><i class="bi bi-file-plus-fill"></i>Add Contact</a>
    </div>
    
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Phone </th>
            <th scope="col">Alter Phone</th>
            <th scope="col">Email</th>
            <th scope="col">Text About Number</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td width="20%">@item.ContactName</td>
                <td width="20%">@item.Phone</td>
                <td width="20%">@item.AlterPhone</td>
                <td width="20%">@item.Email</td>
                <td width="20%">@item.TextAboutNumber</td>
                
                <td>
                    <div role="group" class="w-60 btn-group">
                        <span style="margin-right: 5px;">
                            <a asp-controller="Contact" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary"><i class="bi bi-pencil-square"></i>Edit</a>
                        </span>
                        <span>
                            <a asp-controller="Contact" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="bi bi-trash-fill"></i>Delete</a>
                        </span>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>